@section Scripts{
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAE_bT1fAY2tQAIG19xxXwtsMWB2wxo-yc"></script>

    <script type="text/javascript">  
        const address = {
            lat: '49.85563',
            lng: '19.31578',
            addressName: 'Roczyny',
        };
        
        window.onload = function () {
            const mapOptions = {
                center: new google.maps.LatLng(address.lat, address.lng),
                zoom: 5,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };
        
            const infoWindow = new google.maps.InfoWindow();
        
            const map = new google.maps.Map(document.getElementById("google-maps"), mapOptions);
            const data = address;
            const myLatLng = new google.maps.LatLng(data.lat, data.lng);
            
            const marker = new google.maps.Marker({
                position: myLatLng,
                map: map,
                title: data.title
            });
        
            (function (marker, data) {
                google.maps.event.addListener(marker, "click", function (e) {
                    infoWindow.setContent(data.addressName);
                    infoWindow.open(map, marker);
                });
            })(marker, data);
        } 
    </script>
}